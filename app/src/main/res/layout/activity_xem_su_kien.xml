<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.holoc.scanqrcode.activity.admin.XemSuKienActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBarXemSuKien"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimaryDark"
        app:title="SỰ KIỆN"
        app:titleTextColor="@color/zxing_status_text"
        tools:layout_editor_absoluteX="48dp"


        tools:layout_editor_absoluteY="-129dp" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_themsukien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300sp"
            android:layout_marginTop="400sp"
            android:background="@color/colorPrimaryDark"

            android:src="@android:drawable/ic_menu_add" />

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp" />
    </FrameLayout>
</LinearLayout>
